<div class="col-sm-6 col-sm-offset-3">

  <%= render "shared/content_title", title: "Log in" %>

  <div class="well">
    <%= form_tag "/login" do %>
      <div class="form-group">
        <%= label_tag :username %>
        <%= text_field_tag :username, nil, class: "form-control", placeholder: "Enter username" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, class: "form-control", placeholder: "Password" %>
      </div>
      <%= submit_tag "Login", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
